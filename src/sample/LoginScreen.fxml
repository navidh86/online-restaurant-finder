         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="fullNameTF" layoutX="346.0" layoutY="264.0" onAction="#Login" prefHeight="26.0" prefWidth="183.0" />
      <Label layoutX="563.0" layoutY="309.0" prefHeight="18.0" prefWidth="183.0" />
      <Label fx:id="errorLabel" layoutX="577.0" layoutY="311.0" prefHeight="26.0" prefWidth="183.0" text="Wrong Credentials" textFill="#ea0707">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
   <effect>
      <InnerShadow radius="4.75" width="0.0" />
   </effect>
</AnchorPane>
