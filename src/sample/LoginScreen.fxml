<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginScreenController">
   <children>
      <Label alignment="CENTER" layoutX="107.0" layoutY="121.0" prefHeight="82.0" prefWidth="586.0" text="3Square" textAlignment="CENTER" textFill="#921414">
         <font>
            <Font name="System Bold" size="33.0" />
         </font>
      </Label>
      <TextField fx:id="usernameTF" layoutX="346.0" layoutY="304.0" onAction="#Login" prefHeight="26.0" prefWidth="183.0" />
      <Label layoutX="238.0" layoutY="304.0" prefHeight="26.0" prefWidth="94.0" text="Username :">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="238.0" layoutY="349.0" prefHeight="26.0" prefWidth="94.0" text="Password :">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Button fx:id="loginButton" layoutX="509.0" layoutY="400.0" mnemonicParsing="false" onAction="#Login" prefHeight="26.0" prefWidth="81.0" text="Login">
         <effect>
            <InnerShadow color="#3b4aca" />
         </effect>
      </Button>
      <Label fx:id="registerLabel" alignment="CENTER" layoutX="422.0" layoutY="454.0" onMouseClicked="#goToRegistration" onMouseEntered="#changeColor" onMouseExited="#changeColor" prefHeight="18.0" prefWidth="256.0" text="Don't have an account?" textFill="#d70606" />
